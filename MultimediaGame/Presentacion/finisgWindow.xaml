<Window x:Class="MultimediaGame.Presentacion.finisgWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultimediaGame.Presentacion"
        mc:Ignorable="d"
        Title="CakeHoot" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>

        <Image x:Name="imagenTarta" Width="200" Height="100" Grid.Row="0" Margin="10,10,10,10"/>

        <TextBlock x:Name="txtMessage" Text="Que buen resultado" 
                   FontSize="16" TextWrapping="Wrap" TextAlignment="Center" 
                   Margin="10" Grid.Row="1"/>

        <Button Content="Aceptar" Width="100" Height="30" Grid.Row="2" 
                HorizontalAlignment="Center" Margin="10" Click="Button_Click"/>
    </Grid>
</Window>
