	<ItemGroup>
		<None Include="Assets\recursos.json">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>
	</ItemGroup>

	<ItemGroup>
	  <Resource Include="Assets\imagen.jpg">
